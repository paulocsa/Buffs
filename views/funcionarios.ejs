<%- include ('partials/header.ejs') %>
<%- include ('partials/nav.ejs') %>
<%- include ('partials/sidebar.ejs') %>
<div class="container">
    <h1>Funcionários</h1>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addFuncionarioModal">
        Adicionar Funcionário
    </button>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" style="background-color: #FFCF78;">Nome</th>
                <th scope="col" style="background-color: #FFCF78;">CPF</th>
                <th scope="col" style="background-color: #FFCF78;">Cargo</th>
                <th scope="col" style="background-color: #FFCF78;">Editar / Deletar</th>
            </tr>
        </thead>
        <tbody>
            <% funcionarios.forEach(funcionario => { %>
                <tr>
                    <td><%= funcionario.nome %></td>
                    <td><%= funcionario.cpf %></td>
                    <td><%= funcionario.cargo %></td>
                    <td>
                        <button type="button" class="btn btn-warning" data-toggle="modal"
                            data-target="#viewFuncionarioModal<%= funcionario.id %>">Visualizar
                        </button>
                        <button type="button" class="btn btn-warning" data-toggle="modal"
                            data-target="#editFuncionarioModal<%= funcionario.id %>">Editar
                        </button>
                        <form action="/deleteFuncionario/<%= funcionario.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Deletar</button>
                        </form>
                        
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Modal Adicionar Funcionário -->
<div class="modal fade" id="addFuncionarioModal" tabindex="-1" role="dialog" aria-labelledby="addFuncionarioModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/createFuncionario" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="addFuncionarioModalLabel">Cadastrar Funcionário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulário de criação de funcionário -->
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" id="nome" name="nome" required>
                    </div>
                    <div class="form-group">
                        <label for="cpf">CPF</label>
                        <input type="text" class="form-control" id="cpf" name="cpf" required>
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="telefone">Telefone</label>
                        <input type="text" class="form-control" id="telefone" name="telefone" required>
                    </div>
                    <div class="form-group">
                        <label for="rua">Rua</label>
                        <input type="text" class="form-control" id="rua" name="rua" required>
                    </div>
                    <div class="form-group">
                        <label for="numero">Número</label>
                        <input type="text" class="form-control" id="numero" name="numero" required>
                    </div>
                    <div class="form-group">
                        <label for="bairro">Bairro</label>
                        <input type="text" class="form-control" id="bairro" name="bairro" required>
                    </div>
                    <div class="form-group">
                        <label for="cidade">Cidade</label>
                        <input type="text" class="form-control" id="cidade" name="cidade" required>
                    </div>
                    <div class="form-group">
                        <label for="estado">Estado</label>
                        <input type="text" class="form-control" id="estado" name="estado" required>
                    </div>
                    <div class="form-group">
                        <label for="cargo">Cargo</label>
                        <input type="text" class="form-control" id="cargo" name="cargo" required>
                    </div>
                    <div class="form-group">
                        <label for="dataNascimento">Data de Nascimento</label>
                        <input type="date" class="form-control" id="dataNascimento" name="dataNascimento" required>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar Funcionário -->
<% funcionarios.forEach(funcionario => { %>
    <div class="modal fade" id="editFuncionarioModal<%= funcionario.id %>" tabindex="-1" role="dialog" aria-labelledby="editFuncionarioModalLabel<%= funcionario.id %>" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/updateFuncionario/<%= funcionario.id %>" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editFuncionarioModalLabel<%= funcionario.id %>">Editar Funcionário</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulário de edição de funcionário -->
                        <div class="form-group">
                            <label for="nome<%= funcionario.id %>">Nome</label>
                            <input type="text" class="form-control" id="nome<%= funcionario.id %>" name="nome" value="<%= funcionario.nome %>" required>
                        </div>
                        <div class="form-group">
                            <label for="cpf<%= funcionario.id %>">CPF</label>
                            <input type="text" class="form-control" id="cpf<%= funcionario.id %>" name="cpf" value="<%= funcionario.cpf %>" required>
                        </div>
                        <div class="form-group">
                            <label for="email<%= funcionario.id %>">E-mail</label>
                            <input type="email" class="form-control" id="email<%= funcionario.id %>" name="email" value="<%= funcionario.email %>" required>
                        </div>
                        <div class="form-group">
                            <label for="telefone<%= funcionario.id %>">Telefone</label>
                            <input type="text" class="form-control" id="telefone<%= funcionario.id %>" name="telefone" value="<%= funcionario.telefone %>" required>
                        </div>
                        <div class="form-group">
                            <label for="rua">Rua</label>
                            <input type="text" class="form-control" id="rua" name="rua" value="<%= funcionario.rua %>" required>
                        </div>
                        <div class="form-group">
                            <label for="numero">Número</label>
                            <input type="text" class="form-control" id="numero" name="numero" value="<%= funcionario.numero %>" required>
                        </div>
                        <div class="form-group">
                            <label for="bairro">Bairro</label>
                            <input type="text" class="form-control" id="bairro" name="bairro" value="<%= funcionario.bairro %>" required>
                        </div>
                        <div class="form-group">
                            <label for="cidade">Cidade</label>
                            <input type="text" class="form-control" id="cidade" name="cidade" value="<%= funcionario.cidade %>" required>
                        </div>
                        <div class="form-group">
                            <label for="estado">Estado</label>
                            <input type="text" class="form-control" id="estado" name="estado" value="<%= funcionario.estado %>" required>
                        </div>
                        <div class="form-group">
                            <label for="cargo">Cargo</label>
                            <input type="text" class="form-control" id="cargo" name="cargo" value="<%= funcionario.cargo %>" required>
                        </div>
                        <div class="form-group">
                            <label for="dataNascimento">Data de Nascimento</label>
                            <input type="date" class="form-control" id="dataNascimento" name="dataNascimento" value="<%= funcionario.dataNascimento %>" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }); %>

<% funcionarios.forEach(funcionario => { %>
    <div class="modal fade" id="viewFuncionarioModal<%= funcionario.id %>" tabindex="-1" role="dialog" aria-labelledby="viewFuncionarioModalLabel<%= funcionario.id %>" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/viFuncionario/<%= funcionario.id %>" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="viewFuncionarioModalLabel<%= funcionario.id %>">Visualizar Funcionário</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulário de edição de funcionário -->
                        <div class="card" style="width: 18rem;">
                            <img src="../public/imgs/user.jpg" class="card-img-top">
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= funcionario.nome %></p>
                                <p class="card-text"><%= funcionario.cpf %></p>
                                <p class="card-text"><%= funcionario.email %></p>
                                <p class="card-text"><%= funcionario.telefone %></p>
                                <p class="card-text"><%= funcionario.rua %></p>
                                <p class="card-text"><%= funcionario.numero %></p>
                                <p class="card-text"><%= funcionario.bairro %></p>
                                <p class="card-text"><%= funcionario.cidade %></p>
                                <p class="card-text"><%= funcionario.estado %></p>
                                <p class="card-text"><%= funcionario.cargo %></p>
                                <p class="card-text"><%= funcionario.dataNascimento %></p>
                          </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }); %>


